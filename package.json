{
  "name": "cloverleaf",
  "version": "0.1.0",
  "description": "Redux on the back-end... sort of. A model framework based on the Flux design pattern. Designed to work with Turnpike.",
  "main": "index.js",
  "scripts": {
    "test": "eslint . && mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jay-depot/cloverleaf.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jay-depot/cloverleaf/issues"
  },
  "homepage": "https://github.com/jay-depot/cloverleaf#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.2",
    "should": "^13.2.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "semistandard",
      "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "curly": [
        "error",
        "all"
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": false
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "src/*.js",
          "test/*.js",
          "patches/*.js"
        ]
      }
    ],
    "env": {
      "mocha": true
    }
  }
}
